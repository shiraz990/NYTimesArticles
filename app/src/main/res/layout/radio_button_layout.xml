<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="locale"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_12sdp">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.app.base.mainapp.utils.custom_views.CustomTextView
        android:id="@+id/comments_lael"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginBottom="@dimen/_12sdp"
        android:textColor="@color/app_primary_text_color"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:typeface_from_list="graphik_medium.ttf"
        tools:layout_editor_absoluteX="0dp" />

    <com.app.base.mainapp.utils.custom_views.CustomTextView
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@color/transparent"
        android:imeOptions="actionNext"
        android:minHeight="@dimen/_35sdp"
        android:textSize="@dimen/x16"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:textColor="@color/app_text_color_black"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/comments_lael"
        app:typeface_from_list="graphik_regular.ttf"
        tools:layout_editor_absoluteX="0dp" />

    <View
        android:id="@+id/sep"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:background="@color/app_primary_text_color"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/comments"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
