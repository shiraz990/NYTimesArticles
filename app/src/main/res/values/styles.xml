<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
     </style>


    <style name="headingStyle">
        <item name="android:textSize">@dimen/xlarge_font_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_text_color_white</item>
    </style>

    <style name="subHeadingStyle">
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_primary_text_color_light</item>
    </style>

    <style name="textStyle">
        <item name="android:textSize">@dimen/normal_font_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_text_color_black</item>
    </style>

    <style name="buttonStyle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_26sdp</item>
        <item name="android:textSize">@dimen/x18</item>
        <item name="android:enabled">false</item>
        <item name="android:minHeight">@dimen/x50</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="assesmsntButtonStyle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_26sdp</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:textColor">@color/app_text_color_white</item>
        <item name="android:enabled">false</item>
        <item name="android:minHeight">@dimen/_50sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="scrollbar_shape_style">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarTrackVertical">@color/transparent</item>
        <item name="android:scrollbarSize">12dp</item>
    </style>

    <style name="profileButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/_26sdp</item>
        <item name="android:textSize">@dimen/large_font_size</item>
        <item name="android:textColor">@color/app_text_color_white</item>
        <item name="android:enabled">false</item>
        <item name="android:minHeight">@dimen/_50sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="customButtonStyle" parent="AppTheme">
        <item name="android:background">@drawable/selector_green_gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:radius">@dimen/_10sdp</item>
    </style>

</resources>
